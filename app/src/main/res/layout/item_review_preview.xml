<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@color/overlayFaint">

    <!-- 리뷰 작성자 -->
    <TextView
        android:id="@+id/textReviewerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textPrimary"
        android:textStyle="bold"
        android:textSize="14sp"
        android:text="Reviewer" />

    <!-- 리뷰 본문 -->
    <TextView
        android:id="@+id/textReviewBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="@color/textSecondary"
        android:textSize="13sp"
        android:lineSpacingExtra="3dp"
        android:text="Review content" />

    <!-- 날짜 및 기존 메타 -->
    <TextView
        android:id="@+id/textReviewMeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="@color/textSecondary"
        android:textSize="12sp"
        android:text="2025.09.25" />

    <!-- 좋아요 / 싫어요 / 답글 / 답글 개수 / 삭제 버튼 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <!-- 좋아요 -->
        <LinearLayout
            android:id="@+id/btnLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageLike"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_like" />

            <TextView
                android:id="@+id/textLikeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="12"
                android:textColor="@color/textPrimary"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- 싫어요 -->
        <LinearLayout
            android:id="@+id/btnDislike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="16dp">

            <ImageView
                android:id="@+id/imageDislike"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_dislike" />

            <TextView
                android:id="@+id/textDislikeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="3"
                android:textColor="@color/textPrimary"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- 답글 -->
        <LinearLayout
            android:id="@+id/btnReply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="16dp">

            <ImageView
                android:id="@+id/imageReply"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_reply" />

            <TextView
                android:id="@+id/textReply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="답글"
                android:textColor="@color/textPrimary"
                android:textSize="13sp" />

            <!-- 답글 개수 표시 -->
            <TextView
                android:id="@+id/textReplyCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="0"
                android:textColor="@color/textSecondary"
                android:textSize="12sp" />

        </LinearLayout>


        <!-- 삭제 -->
        <LinearLayout
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="16dp">

            <ImageView
                android:id="@+id/imageDelete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_delete" />

            <TextView
                android:id="@+id/textDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="삭제"
                android:textColor="@color/textPrimary"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>

    <!-- 답글 입력창 (기본 숨김) -->
    <LinearLayout
        android:id="@+id/layoutReplyInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:visibility="gone">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editReply"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="답글 작성..." />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSubmitReply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등록" />
    </LinearLayout>

    <!-- 하위 답글 표시 영역 (기본 숨김) -->
    <LinearLayout
        android:id="@+id/layoutChildReplies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="6dp"
        android:visibility="visible" />

</LinearLayout>
